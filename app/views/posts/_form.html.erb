<%= form_with(model: post, html: { class: 'post-form' }) do |form| %>
  <% if post.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(post.errors.count, "erro") %> impediram que este post fosse salvo:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, 'Título', class: 'form-label' %>
    <%= form.text_field :title, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Descrição', class: 'form-label' %>
    <%= form.text_field :description, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :text, 'Texto', class: 'form-label' %>
    <%= form.text_area :text, class: 'form-textarea' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Salvar Post', class: 'form-submit' %>
  </div>
<% end %>
