<p style="color: green"><%= notice %></p>

<div class="post-container">
  <!-- Renderizar o post usando uma partial -->
  <%= render partial: 'post', locals: { post: @post } %>

  <div class="actions">
    <%= link_to "Editar", edit_post_path(@post), class: "btn btn-primary" %> |
    <%= link_to "Voltar a página principal", posts_path, class: "btn btn-secondary" %> |
    <%= button_to "Deletar post", @post, method: :delete, data: { confirm: "Você tem certeza que deseja excluir este post?" }, class: "btn btn-danger" %>
  </div>
</div>
